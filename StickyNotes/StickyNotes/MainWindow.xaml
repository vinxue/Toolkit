<Window x:Class="StickyNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyNotes"
        mc:Ignorable="d"
        Title="Sticky Notes" Height="400" Width="300"
        WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF6A4C93"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC8A2C8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FFF2E5FF" BorderBrush="#FFD4C0EA" BorderThickness="2" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#FFD4C0EA" CornerRadius="6,6,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0">
                        <Image Source="AppIcon.ico"
                               Width="16" Height="16"
                               Margin="0,0,5,0"/>
                        <TextBlock Name="TitleTextBlock"
                                   Text="Sticky Notes"
                                   VerticalAlignment="Center"
                                   Foreground="#FF6A4C93"/>
                    </StackPanel>

                    <!-- Window Control Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,5,0">
                        
                        <!-- Minimize Button -->
                        <Button Style="{StaticResource TitleBarButtonStyle}"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE921;"
                                Margin="0,0,5,0"
                                Click="MinimizeButton_Click"/>
                        
                        <!-- Close Button -->
                        <Button Style="{StaticResource TitleBarButtonStyle}"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE8BB;"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Text Editor Area -->
            <RichTextBox Grid.Row="1" 
                         Name="ContentRichTextBox"
                         IsDocumentEnabled="True"
                         Margin="2"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="14"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         Foreground="#FF4A4A4A"
                         VerticalScrollBarVisibility="Visible"
                         HorizontalScrollBarVisibility="Disabled"
                         Block.LineHeight="1.2"
                         SelectionChanged="ContentRichTextBox_SelectionChanged"
                         TextChanged="ContentRichTextBox_TextChanged"
                         PreviewKeyDown="ContentRichTextBox_PreviewKeyDown">
                <RichTextBox.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="MinWidth" Value="0"/>
                        <Setter Property="Width" Value="6"/>
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#FFD4C0EA" CornerRadius="0,0,6,6">
                <Grid Margin="8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Position info -->
                    <TextBlock Grid.Column="0" 
                               Name="PositionTextBlock" 
                               Text="Ln 1, Col 1" 
                               VerticalAlignment="Center"
                               FontSize="10"
                               Foreground="#FF6A4C93"/>

                    <!-- Center: Font size -->
                    <TextBlock Grid.Column="1" 
                               Name="FontSizeTextBlock" 
                               Text="14pt" 
                               VerticalAlignment="Center"
                               FontSize="10"
                               Foreground="#FF6A4C93"
                               Margin="10,0"/>

                    <!-- Right: Character count -->
                    <TextBlock Grid.Column="2" 
                               Name="CharCountTextBlock" 
                               Text="0 chars" 
                               VerticalAlignment="Center"
                               FontSize="10"
                               Foreground="#FF6A4C93"/>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
