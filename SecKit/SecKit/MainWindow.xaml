<Window x:Class="SecKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecKit"
        mc:Ignorable="d"
        Title="Security Kit" Height="380" Width="600" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <TabControl Background="Transparent">
            <TabItem Header="Hash Calc" Background="Transparent">
                <local:HashCalcWindow />
            </TabItem>
            <TabItem Header="AES Cipher" Background="Transparent">
                <local:AesCipherWindow />
            </TabItem>
            <TabItem Header="ECDSA Tool" Background="Transparent">
                <local:EcdsaToolWindow />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
