<Window x:Class="TimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        mc:Ignorable="d"
        Title="Time Tracker" Height="250" Width="500" WindowStartupLocation="CenterScreen"
        Background="Transparent" MouseDown="Window_MouseDown" ResizeMode="CanMinimize" Icon="AppIcon.ico">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                <DatePicker x:Name="datePicker" Width="120" Margin="5"/>
                <ComboBox x:Name="hourCombo" Width="50" Margin="5"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="2"/>
                <ComboBox x:Name="minuteCombo" Width="50" Margin="5"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="2"/>
                <ComboBox x:Name="secondCombo" Width="50" Margin="5"/>
            </StackPanel>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- First row for values -->
                <TextBlock x:Name="daysText" Grid.Row="0" Grid.Column="0" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text=":" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Center"/>
                <TextBlock x:Name="hoursText" Grid.Row="0" Grid.Column="2" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text=":" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Center"/>
                <TextBlock x:Name="minutesText" Grid.Row="0" Grid.Column="4" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Text=":" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Center"/>
                <TextBlock x:Name="secondsText" Grid.Row="0" Grid.Column="6" FontSize="64" TextAlignment="Center" Foreground="#FF0068B5"/>

                <!-- Second row for labels -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="DAYS" FontSize="12" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="HOURS" FontSize="12" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="4" Text="MINUTES" FontSize="12" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="6" Text="SECONDS" FontSize="12" TextAlignment="Center" Foreground="#FF0068B5" VerticalAlignment="Top" Margin="0,10,0,0"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
